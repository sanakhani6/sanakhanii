num1 = float(input ("please enter first number:"))
num2 = float(input ("please enter second number:"))
num3 = float(input("please enter third number:"))
num4 = float (input ("please enter fourth number:"))

largest = num1
if num2 > largest:
    largest = num2
if num3 > largest:
    largest = num3
if num4 > largest:
    largest = num4
print(("largest number:"), largest)
